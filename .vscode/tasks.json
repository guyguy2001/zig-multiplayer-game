{
  "version": "2.0.0",
  "tasks": [
    // --- Build ---
    {
      "label": "Zig: Build",
      "type": "shell",
      "command": "zig build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$zig"],
      "detail": "Build the Zig project"
    },

    // --- Master task: runs all in parallel ---
    {
      "label": "Run Game (server + 2 clients)",
      "dependsOn": ["Run Server", "Run Client 1", "Run Client 2"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "group": "none"
    },

    // --- Server ---
    {
      "label": "Run Server",
      "type": "shell",
      "command": "${workspaceFolder}/zig-out/bin/${workspaceFolderBasename}.exe --server",
      "dependsOn": ["Zig: Build"],
      "problemMatcher": [],
      "presentation": { "panel": "new" }
    },

    // --- Client 1 ---
    {
      "label": "Run Client 1",
      "type": "shell",
      "command": "${workspaceFolder}/zig-out/bin/${workspaceFolderBasename}.exe --client-id 1",
      "dependsOn": ["Zig: Build"],
      "problemMatcher": [],
      "presentation": { "panel": "new" }
    },

    // --- Client 2 ---
    {
      "label": "Run Client 2",
      "type": "shell",
      "command": "${workspaceFolder}/zig-out/bin/${workspaceFolderBasename}.exe --client-id 2",
      "dependsOn": ["Zig: Build"],
      "problemMatcher": [],
      "presentation": { "panel": "new" }
    }
  ],
  "inputs": [
    {
      "id": "zig-multiplatform-exe",
      "type": "command",
      "command": "workbench.action.terminal.sendSequence",
      "args": {
        "text": ""
      }
    }
  ]
}
